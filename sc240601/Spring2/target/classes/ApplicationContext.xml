<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.spring2.service,com.spring2.dao"/>

    <bean id="emp" class="com.spring2.pojo.Emp">
        <property name="id" value="1"/>
        <property name="name" value="张三"/>
        <property name="money" value="3500"/>
        <property name="dept" ref="dept"/>
    </bean>
    <bean id="dept" class="com.spring2.pojo.Dept">
        <property name="id" value="1"/>
        <property name="dname" value="宣传部"/>
    </bean>

    <bean id="emp2" class="com.spring2.pojo.Emp">
        <constructor-arg value="2"/>
        <constructor-arg value="李四"/>
        <constructor-arg value="4500"/>
        <constructor-arg ref="dept2"/>
    </bean>
    <bean id="dept2" class="com.spring2.pojo.Dept">
        <constructor-arg value="2"/>
        <constructor-arg value="综合部"/>
    </bean>

</beans>